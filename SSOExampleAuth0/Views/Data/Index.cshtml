@model SampleMvcApp.ViewModels.DataViewModel

@{
    ViewData["Title"] = "Data Page";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewData["Title"].</h2>
        <h3>Let's see some dat from API</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <h3>Contacts</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Phone Number
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Contacts != null)
                {
                    @foreach (var contact in Model.Contacts)
                    {
                        <tr>
                            <td>@contact.FirstName</td>
                            <td>@contact.LastName</td>
                            <td>@contact.PhoneNumber</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <h3>Todos</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Due Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Todos != null)
                {
                    @foreach (var todo in Model.Todos)
                    {
                        <tr>
                            <td>@todo.Name</td>
                            <td>@todo.Description</td>
                            <td>@todo.DueDate</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <h3>Weather Forecast</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        Temperature C
                    </th>
                    <th>
                        Temperature F
                    </th>
                    <th>
                        Summary
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.WeatherForcasts != null)
                {
                    @foreach (var weather in Model.WeatherForcasts)
                    {
                        <tr>
                            <td>@weather.Date</td>
                            <td>@weather.TemperatureC</td>
                            <td>@weather.TemperatureF</td>
                            <td>@weather.Summary</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>